{
  "variables" : {
    "aws_access_key_id": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_access_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "aws_session_token": "{{env `AWS_SESSION_TOKEN`}}",
    "time_zone": "{{env `TIME_ZONE`}}"
  },
  "builders" : [
    {
      "type" : "amazon-ebs",
      "access_key" : "{{user `aws_access_key_id`}}",
      "secret_key" : "{{user `aws_secret_access_key`}}",
      "token" : "{{user `aws_session_token`}}",
      "region" : "us-east-2",
      "source_ami" : "ami-008c5ba1857e0fdec",
      "instance_type" : "t3.micro",
      "ssh_username" : "ec2-user",
      "associate_public_ip_address" : "true",
      "ami_name": "docker-production-aws-msitara41-ecs-base {{timestamp}}",
      "tags" : {
        "Name" : "Docker Production AWS msitara41 ECS Base Image",
        "SourceAMI": "ami-07cddc5e9912c5e5c",
        "DockerVersion" : "18.09.9-ce",
        "ECSAgentVersion" : "1.39.0"
      }
    }
   ],
  "provisioners" : [
    {
      "type" : "shell",
      "script" : "scripts/install-os-packages.sh"
    },
    {
      "type" : "shell",
      "scripts" : "scripts/configure-timezone.sh",
      "environment_vars" : [
        "TIME_ZONE={{user `time_zone`}}"
      ]
    },
    {
      "type" : "shell",
      "script" : "scripts/cloud-init-options.sh"
    },
    {
      "type" : "shell",
      "script" : "scripts/cleanup.sh"
    },
    {
      "type" : "file",
      "source" : "files/firstrun.sh",
      "destination" : "/home/ec2-user/firstrun.sh"
    }
  ],
  "post-processors" : [
     {
       "type" : "manifest",
       "output" : "manifest.json",
       "strip_path" : true
     }
   ]
}
